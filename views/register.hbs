{{#if error}}
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}
<form method="POST" class="form-horizontal" style="margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
<h3>Register</h3>
  <div class="form-group">
      <input type="text" name="username" class="form-control" placeholder="Username">
  </div>
  <div class="form-group">
    <input type="password" name="password" class="form-control" placeholder="Password">
  </div>
  <div class="form-group">
    <input type="password" name="passwordConfirm" class="form-control" placeholder="Confirm Password">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Register</button>
  </div>
</form>
